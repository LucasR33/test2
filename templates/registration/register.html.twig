{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="col-4 offset-4">
    <div style="margin-top:30px">
        <div class="card border-dark mb-3">
            <div class="card-header" style="font-family: 'viking'"><h1>S'inscrire</h1></div>
            <div class="card-body">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.nom) }}
                {{ form_row(registrationForm.prenom) }}
                {{ form_row(registrationForm.mail) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.giveInfo) }} 
                {{ form_row(registrationForm.captchaCode) }} </br>
                <button class="btn btn-primary">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
        <div class="alert alert-warning" role="alert">
            <b style="text-align: center;">En cas de victoire, nous vous contacterons grâce à l'email saisi.</b>
        </div>
    </div>
</div>
{% endblock %}
